# ================================================
# AI Social Media Automation Platform
# Environment Configuration Template
# ================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================================
# LLM Configuration
# ================================================
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model to use (default: gpt-4o-mini for cost efficiency)
LLM_MODEL=gpt-4o-mini

# LLM Provider (currently supported: openai)
LLM_PROVIDER=openai

# ================================================
# Database Configuration
# ================================================
# SQLite database path (relative to project root)
DATABASE_URL=sqlite:///./social_automation.db

# ================================================
# Server Configuration
# ================================================
# Host and port for the FastAPI server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Debug mode (set to False in production)
DEBUG=True

# ================================================
# LinkedIn OAuth Configuration
# ================================================
# Register app at: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/linkedin/callback

# ================================================
# Instagram/Facebook OAuth Configuration
# ================================================
# Register app at: https://developers.facebook.com/
# Instagram uses Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# Instagram Business Account ID
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# ================================================
# Scheduler Configuration
# ================================================
# How often to check for pending posts (in seconds)
SCHEDULER_CHECK_INTERVAL=60

# Maximum retry attempts for failed posts
MAX_RETRY_ATTEMPTS=3

# ================================================
# Content Generation Settings
# ================================================
# Maximum tokens for generated content
MAX_CONTENT_TOKENS=1000

# Temperature for LLM creativity (0.0 - 1.0)
LLM_TEMPERATURE=0.7
