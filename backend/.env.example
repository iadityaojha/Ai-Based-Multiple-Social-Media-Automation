# ================================================
# AI Social Media Automation - SaaS Configuration
# ================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ================================================
# Application Settings
# ================================================
APP_NAME=AI Social Automation
APP_VERSION=2.0.0
DEBUG=True

# ================================================
# Database Configuration
# ================================================
# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_social_db

# SQLite (Development/Local)
DATABASE_URL=sqlite:///./ai_social.db

# ================================================
# Security - CHANGE THESE IN PRODUCTION!
# ================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32

# Algorithm for JWT
JWT_ALGORITHM=HS256

# Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Encryption key for API keys (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-encryption-key-generate-this

# ================================================
# Server Configuration
# ================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ================================================
# Default LLM Settings (can be overridden by user)
# ================================================
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.7

# ================================================
# Scheduler Configuration
# ================================================
SCHEDULER_CHECK_INTERVAL=60
MAX_RETRY_ATTEMPTS=3
